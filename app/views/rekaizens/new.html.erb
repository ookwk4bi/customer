<div class="row">
  <div class="col-lg-12">
    <br>
    <h1 class="form_group">リカイゼン 登録</h1>
    <br>
    <p class="form_group">⚠100ページを超えないようにしてください！！</p>
    <br>
    <div class="contents row">
      <div class="container1">
        <%= form_with(model: @rekaizen, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <%= f.label :タイトル名 %><br>
          <%= f.text_field :rekaizen_name, placeholder: "タイトル", class: "form-control1" %>
          <%= f.label :アドレス %><br>
          <%= f.text_field :rekaizen_url, placeholder: "URL", class: "form-control1" %>
          <%= f.submit "登録", data: { turbo_method: :post, turbo_confirm: 'URLは正しいですか？'}, class: "form-control3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>