<div class="row">
  <div class="col-lg-12">
    <br>
    <h1 class="form_group">編集ページ</h1>
    <br>
    <div class="contents row">
      <div class="container1">
        <%= form_with(model: @company, local: true) do |f| %>
          <%= f.label :会社名 %><br>
          <%= f.text_field :name, placeholder: "会社名", class: "form-control1" %>
          <%= f.label :住所 %><br>
          <%= f.text_field :address, placeholder: "住所", class: "form-control1" %>
          <%= f.label :URL %><br>
          <%= f.text_field :url, placeholder: "URL", class: "form-control1" %>
          <%= f.submit "登録", class: "form-control3"%>
        <% end %>
      </div>
    </div>
  </div>
</div>